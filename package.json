{
  "name": "token-payment-gateway",
  "version": "0.0.1",
  "description": "A payment gateway for ERC-based tokens",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "posttest": "npm run lint",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage",
    "lint": "npx prettier ./test/*.ts --check",
    "lint:fix": "npx prettier ./test/*.ts --write"
  },
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.2",
    "@typechain/hardhat": "^1.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.32",
    "chai": "^4.3.3",
    "chai-as-promised": "^7.1.1",
    "@types/chai-as-promised": "^7.1.3",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.1.1",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.2.1",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  }
}
